{
  "manifest_version": 3,
  "name": "OneWallet",
  "description": "oneWallet chrome extension",
  "action": {
    "default_title": "OneWallet",
    "default_icon": {
      "16": "extension-assets/icon16.png",
      "24": "extension-assets/icon24.png",
      "32": "extension-assets/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "extension-assets/icon16.png",
    "48": "extension-assets/icon48.png",
    "128": "extension-assets/icon128.png",
    "256": "extension-assets/icon256.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "sidePanel",
    "identity",
    "offscreen",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/inject.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "https://docs.google.com/*",
        "https://drive.google.com/*",
        "https://*.docs.google.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "https://docs.google.com/*",
        "https://drive.google.com/*",
        "https://*.docs.google.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "js/service_worker.js",
    "type": "module"
  }
}
