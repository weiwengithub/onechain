{
  "manifest_version": 3,
  "name": "Onechain Wallet",
  "description": "onechain wallet chrome extension",
  "action": {
    "default_title": "Onechain Wallet",
    "default_icon": {
      "16": "extension-assets/icon16.png",
      "24": "extension-assets/icon24.png",
      "32": "extension-assets/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "extension-assets/icon16.png",
    "48": "extension-assets/icon48.png",
    "128": "extension-assets/icon128.png",
    "256": "extension-assets/icon256.png"
  },
  "permissions": ["storage", "unlimitedStorage", "tabs", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["js/inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "js/service_worker.js",
    "type": "module"
  }
}
